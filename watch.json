{
  "install": {
    "include": [
      "^package\\.json$",
      "^\\.env$"
    ]
  },
  "stringreplace": {
    "exclude": [
      "^public/images/"
    ],
    "include": [
      "\\.html$",
      "\\.css$"
    ]
  },
  "restart": {
    "exclude": [
      "^public/",
      "^views/"
    ],
    "include": [
      "\\.js$",
      "\\.json$"
    ]
  },
  "throttle": 500
}